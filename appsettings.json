{
  "Monitor": {
    "port": "COM6",
    "delayMS" : 25,
    "outputDir" : "C:\\Users\\akurzmann\\Desktop\\SuperSoco\\Traces"
  },
  "NLog": {
    "targets": {
      "console": {
        "type": "ColoredConsole",
        "layout": "${message}"
      },
      "dataFile" : {
        "type": "File",
        "fileName" : "data.bin",
        "layout": "${message}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "console"
      },
      {
        "logger" : "SerialMonitor",
        "minLevel":"Info",
        "writeTo": "dataFile"
      }
    ]
  }
}
